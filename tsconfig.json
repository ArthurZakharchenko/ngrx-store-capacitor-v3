{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "types": [
      "node"
    ],
    "lib": ["es7", "es2015", "dom"]
  },
  "files": [
    "index.ts",
    "./src/object.helper.ts",
    "./src/hydrated.reducer.ts",
    "./src/storage-sync.module.ts",
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
